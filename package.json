{
  "name": "aifs-client",
  "version": "0.1.0",
  "description": "Cross-Cloud Object-Management Client with AIFS support",
  "main": "dist/main/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:tui": "cd src/tui && npm run build",
    "build:all": "npm run build && npm run build:tui",
    "build:packages": "npm run build:tui",
    "dist": "npm run build:all && electron-builder",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "dist:all": "npm run build:all && electron-builder --mac --win --linux",
    "pack": "npm run build:all && electron-builder --dir",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "test:aifs": "ts-node --transpile-only --project tsconfig.test.json scripts/test-aifs-provider.ts",
    "mock:aifs": "node scripts/mock-aifs-server.js"
  },
  "keywords": [
    "aifs",
    "file-manager",
    "s3",
    "gcs",
    "azure",
    "electron"
  ],
  "author": {
    "name": "AIFS Team",
    "email": "team@even-derech-it.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UriBer/aifs-ngclient.git"
  },
  "bugs": {
    "url": "https://github.com/UriBer/aifs-ngclient/issues"
  },
  "homepage": "https://github.com/UriBer/aifs-ngclient#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^8.0.1",
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^4.2.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.321.1",
    "@aws-sdk/lib-storage": "^3.321.1",
    "@azure/storage-blob": "^12.14.0",
    "@google-cloud/storage": "^6.10.1",
    "@grpc/grpc-js": "^1.8.14",
    "@grpc/proto-loader": "^0.7.6",
    "axios": "^1.5.0",
    "blake3": "^2.1.7",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "minimatch": "^10.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.aifs.client",
    "productName": "AIFS Commander",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/tui/dist/**/*",
      "src/main/proto/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/tui/dist",
        "to": "tui",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
