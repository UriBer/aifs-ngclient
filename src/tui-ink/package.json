{
  "name": "aifs-commander-tui-ink",
  "version": "1.0.0",
  "description": "Ink-based TUI implementation for AIFS Commander",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.tsx",
